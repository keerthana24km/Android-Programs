<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="109dp"
        android:layout_marginLeft="12.0sp"
        android:layout_marginTop="30.0sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.0sp"
            android:layout_marginTop="5.0sp"
            android:layout_marginBottom="5.0sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/mtg" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="353dp"
            android:layout_height="43dp"
            android:layout_marginLeft="45.0sp"
            android:layout_marginTop="30.0sp"
            android:layout_marginRight="30sp"
            android:layout_weight="1"
            android:text="Mentor To Go"
            android:textAlignment="textStart"
            android:textColor="#13258A"
            android:textSize="26sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10.0sp"
        android:layout_marginTop="25.0sp"
        android:layout_marginRight="10.0sp"
        android:background="?android:attr/listDivider"
        android:minHeight="@dimen/cardview_default_elevation"
        android:foreground="@color/black"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10.0sp"
        android:layout_marginTop="30.0sp"
        android:layout_marginRight="10.0sp"
        android:text="Shrutilayaa"
        android:textColor="#153E16"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="10.0sp"
        android:layout_marginTop="20.0sp"
        android:layout_marginRight="10.0sp"
        android:text="Mentor Co-ordinator"
        android:textColor="#18531B"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10.0sp"
        android:layout_marginTop="20.0sp"
        android:layout_marginRight="10.0sp"
        android:text="77XXX12XX9"
        android:textColor="#154717"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="10.0sp"
        android:layout_marginTop="20.0sp"
        android:layout_marginRight="10.0sp"
        android:text="Bangalore - 560072"
        android:textColor="#174519"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0sp"
        android:layout_marginTop="10.0sp"
        android:layout_marginRight="10.0sp"
        android:text="email , fax , website"
        android:textAlignment="center"
        android:textColor="#7E6060"
        android:textSize="20sp" />
</LinearLayout>